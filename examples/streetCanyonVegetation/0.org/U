FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../constant/flowProperties"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $flowVelocity;

boundaryField
{

    ground
    {
          type          fixedValue;
          value         uniform (0 0 0);
    }

    cube1
    {
          type          fixedValue;
          value         uniform (0 0 0);
    }
    cube2
    {
          type          fixedValue;
          value         uniform (0 0 0);
    }

    outlet
    {
          type          zeroGradient;
    }


    sky
    {
          type          slip;
    }

    inlet
    {
        type            groovyBC;
        variables       "zp=pos().z;";
        valueExpression "vector(($ustar/$kappa)*log((zp+$z0)/$z0),0,0)";
    }


    front
    {
          type        symmetryPlane;
    }

    back
    {
          type        symmetryPlane;
    }


}

