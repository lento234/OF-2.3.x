solvers
{
    "(p|Phi)"
    {
        solver          GAMG;
        tolerance       1e-10;
        relTol          0.01;

        smoother        DIC;
        
        maxIter         100;
        cacheAgglomeration on;
        nCellsinCoarsestLevel 50;
        agglomerator    faceAreaPair;
        mergeLevels     1;
    }
    
    "(U|k|epsilon|omega|R|nuTilda)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0.01;
    }

