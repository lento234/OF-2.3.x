FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../constant/flowProperties"

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $turbulentKE;

boundaryField
{
  ground
  {
        type          kqRWallFunction;
        value         uniform 0.0;
  }

  cube
  {
        type          kqRWallFunction;
        value         uniform 0.0;
  }

  outlet
  {
        type          zeroGradient;
  }


  sky
  {
        type          slip;
  }

  inlet
  {
        type            groovyBC;
        variables       "zp=pos().z;";
        valueExpression "pow($ustar,2)/pow($Cmu,0.5)";
        value           uniform $turbulentKE;
  }


  front
  {
        type        symmetryPlane;
  }

  back
  {
        type        symmetryPlane;
  }

}


// ************************************************************************* //
