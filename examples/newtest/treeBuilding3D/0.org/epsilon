FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../constant/flowProperties"

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform $turbulentEpsilon;

boundaryField
{

    ground
    {
          type            epsilonWallFunction;
          Cmu             $Cmu;
          kappa           $kappa;
          E               $E;
          value           $internalField;
    }

    cube
    {
          type            epsilonWallFunction;
          Cmu             $Cmu;
          kappa           $kappa;
          E               $E;
          value           $internalField;
    }

    outlet
    {
          type          zeroGradient;
    }


    sky
    {
          type          slip;
    }

    inlet
    {
          type            groovyBC;
          variables       "zp=pos().z;";
          valueExpression "pow($ustar,3)/($kappa*(zp+$z0))";
          value           uniform $turbulentEpsilon;
    }

    front
    {
          type        symmetryPlane;
    }

    back
    {
          type        symmetryPlane;
    }

}


// ************************************************************************* //
