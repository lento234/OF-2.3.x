#!/bin/bash

# src files
srcPath=(
    src/turbulenceModels/incompressible/RAS
    src/vegetationModels
)

utilPath=(
    applications/utilities/postProcessing/velocityField/gradU
)

appPath=(
    applications/solvers/bigleafFoam
)

parentDir=$(pwd)

# clean src
echo "-----------------------------------"
echo "C O M P I L E    S R C   F I L E S"
echo "----------------------------------"
for i in "${srcPath[@]}"
  do
    cd $i
    echo "Compiling.....$i"
    wmake libso
    cd $parentDir
done
echo ""

# clean src
echo "-------------------------------------"
echo "C O M P I L E    U T I L    F I L E S"
echo "-------------------------------------"
for i in "${utilPath[@]}"
  do
    cd $i
    echo "Compiling.....$i"
    wmake
    cd $parentDir
done
echo ""

# clean apps
echo "-----------------------------------------"
echo "C O M P I L E    S O L V E R   F I L E S"
echo "----------------------------------------"
for i in "${appPath[@]}"
  do
    cd $i
    echo "Compiling.....$i"
    wmake
    cd $parentDir
done
echo "All done."
